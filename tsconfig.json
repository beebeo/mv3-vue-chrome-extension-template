{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "lib": ["esnext", "dom"],
        "types": ["@types/chrome", "@types/node", "@types/fs-extra"]
    },
    "exclude": [],
    "include": ["src/**/*.d.ts", "src/**/*.vue"]
}
